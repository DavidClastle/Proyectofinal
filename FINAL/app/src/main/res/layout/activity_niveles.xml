<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#f5f5f5"
    android:orientation="vertical"
    tools:context=".Niveles">

    <Space
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/nom" />

        <SearchView
            android:id="@+id/srchJuego"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPopular"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/popular" />

        <ImageButton
            android:id="@+id/btnMasJugados"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/masjugados" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/espacial" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/artistico" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/puzzle" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/observacion" />
    </LinearLayout>
</LinearLayout>