<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2C2C2C"
    tools:context=".lvl14">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Se le acaba el tiempo! Ayudala!"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="286dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/nina" />

        <ImageView
            android:id="@+id/reloj"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/reloj" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radiogroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="uptadeRadio"
                android:text="Text"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rbRotate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="uptadeRadio"
                android:text="Rotate"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rbTranslate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:onClick="uptadeRadio"
                android:text="Translate"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RadioGroup>

        <EditText
            android:id="@+id/txtX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:ems="10"
            android:hint="X"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:ems="10"
            android:hint="Y"
            android:inputType="number" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTxtTexto"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:ems="10"

        android:inputType="textPersonName"

        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnComprobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_dark"
        android:onClick="onClickComprobar"
        android:text="Comprobar" />

    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_dark"
        android:onClick="Reiniciar"
        android:text="reiniciar" />

</LinearLayout>